<launch>
    <arg name="id" default="1"/>
    <arg name="record_duration" default="120"/>

 <node pkg="rosbag" type="record" name="rosbag_record_topics" ns="rosbag_record_drone_$(arg id)"
       args="record --duration=$(arg record_duration) -o drone_$(arg id)_experiment -e /drone_$(arg id)/ual/pose /drone_$(arg id)/cgo3_camera/image_raw/compressed"/>
</launch>